@model Project.Entities.Request.AddNewEmployee

@{
    ViewData["Title"] = "View";
    //Layout = "";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Background.css">
</head>


<div class="container add-new-emp-container">

    <h4 class="add-emp-heading">AddNewEmployee</h4>
    <h2 class="text-success">@ViewBag.Message</h2>
    <hr />
    <div class="row">
        <div class="row">

            <form class="row" asp-action="AddNewEmp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-6">
                    <label asp-for="firstName" class="control-label"></label>
                    <input asp-for="firstName" class="form-control" id="add-emp-fName" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="lastName" class="control-label"></label>
                    <input asp-for="lastName" class="form-control" id="add-emp-lName" />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="gender" class="control-label"></label>
                    <select asp-for="gender" class="form-select" id="add-emp-gender">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="dateOfBirth" class="control-label"></label>
                    <input asp-for="dateOfBirth" class="form-control" id="add-emp-dob" />
                    <span asp-validation-for="dateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="departmentId" class="control-label"></label>
                    <input asp-for="departmentId" class="form-control" id="add-emp-deptId" />
                    <span asp-validation-for="departmentId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="salary" class="control-label"></label>
                    <input asp-for="salary" class="form-control" id="add-emp-salary" />
                    <span asp-validation-for="salary" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="address" class="control-label"></label>
                    <input asp-for="address" class="form-control" id="add-emp-email" />
                    <span class="text-danger">@ViewBag.Error</span>
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="cityId" class="control-label"></label>
                    <select asp-for="cityId" class="form-select" id="add-emp-cityId">
                        <option value="2">Surat</option>
                        <option value="3">Ahmedabad</option>
                        <option value="5">Pune</option>
                        <option value="4">Mumbai</option>
                        <option value="6">Chester</option>
                        <option value="9">Anchorage</option>
                        <option value="12">San Diego</option>
                        <option value="15">Maseruq</option>
                        <option value="18">Barisal</option>
                    </select>

                    <span asp-validation-for="cityId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="pinCode" class="control-label"></label>
                    <input asp-for="pinCode" class="form-control" id="add-emp-pinCode" />
                    <span asp-validation-for="pinCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ListOfEmployee">Back to List</a>
    </div>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    }

</div>